{
  "builds": [{ "src": "api/index.py", "use": "@vercel/python" }],
  "routes": [
    {
      "src": "/api/latency",
      "methods": ["POST", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "POST, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type"
      },
      "dest": "api/index.py"
    },
    { 
      "src": "/(.*)", 
      "dest": "api/index.py" 
    }
  ]
}
